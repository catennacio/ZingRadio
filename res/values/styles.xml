<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />
    <style name="Theme.Default" parent="@android:style/Theme"></style>
    <style name="Theme.NoTitle" parent="@android:style/Theme.Black.NoTitleBar">
    </style>

 <style name="Text.FontbaseCondensed" parent="@android:style/Widget.TextView">
 </style>
 <style name="Text.FontbaseNormal" parent="@android:style/Widget.TextView">
 </style>
 <style name="Text.MarqueeNormal" parent="Text.FontbaseNormal">
     <item name="android:ellipsize">marquee</item>
     <item name="android:focusable">false</item>
     <item name="android:marqueeRepeatLimit">marquee_forever</item>
     <item name="android:scrollHorizontally">true</item>
 </style>
    <style name="HoloButton.Borderless" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/item_background_holo_light</item>
        <item name="android:padding">0dip</item>
    </style>

    <style name="HeaderText" parent="@android:style/Widget.TextView">
        <!--  <item name="android:textAllCaps">true</item> -->
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">8dip</item>
    </style>
    
    <style name="StationName" parent="Text.FontbaseCondensed">
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
    </style>
    
    <style name="SongName" parent="Text.MarqueeNormal">
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32sp</item>
    </style>
    
    <style name="Artist" parent="Text.MarqueeNormal">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#32a4ce</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">bottom</item>
    </style>
    
    <style name="MyActionBar">
        <item name="android:background">@color/bg_topbar</item>
        <item name="android:layout_height">@dimen/lo_topbar</item>
        <item name="android:layout_width">match_parent</item>
       </style>
        <style name="ButtonControl.ButtonPlayPause">
        <item name="android:background">@null</item>
       </style>
    
    <style name="ButtonDefault" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/button_default</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    
    <style name="ButtonSong" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/button_song</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="ButtonChannel" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/txt_channellist</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginTop">1px</item>
        <item name="android:drawableRight">@drawable/img_btn_channel_arrow</item>
        <item name="android:background">@drawable/button_channeltitle</item>
    </style>
    
    <style name="ButtonVolume" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/button_volume</item>
        <item name="android:layout_height">@dimen/button_control</item>
        <item name="android:layout_width">@dimen/button_control</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="ButtonTop" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/button_top</item>
        <item name="android:layout_height">@dimen/lo_topbar</item>
        <item name="android:layout_width">@dimen/lo_topbar</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="ButtonChannelTitle" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/button_channeltitle</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="ButtonControl" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/button_control</item>
        <item name="android:layout_width">@dimen/button_control</item>
        <item name="android:layout_height">@dimen/button_control</item>
        <item name="android:scaleType">centerCrop</item>
       </style>
        <style name="ButtonControl.ButtonPlayPause">
        <item name="android:background">@null</item>
       </style>
       <style name="ButtonBack" parent="@android:style/Widget.ImageButton">
           <item name="android:background">@drawable/button_back</item>
           <item name="android:layout_width">@dimen/button_back</item>
        	<item name="android:layout_height">@dimen/button_back</item>
        	<item name="android:src">@drawable/img_btn_back</item>
        	<item name="android:scaleType">centerCrop</item>
       </style>
       
    <style name="Divider">
         <item name="android:layout_height">1px</item>="1px"
         <item name="android:background">@color/divider</item>
         <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="Divider.Channellist">
        <item name="android:background">@drawable/divider_channellist</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    
    <style name="ChannellistinsideHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/channel_list_inside_height</item>
        <item name="android:background">@color/bg_channellist_header</item>
    </style>
    <style name="SearchBox" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
                <item name="android:layout_height">32dp</item>
                <item name="android:background">@drawable/searchbox</item>
                <item name="android:textColor">@color/txt_searchbox</item>
                <item name="android:drawableLeft">@drawable/img_search</item>
                <item name="android:drawableRight">@null</item>
                <item name="android:hint">@string/msg_searchbox_hint</item>
    </style>
    <style name="SearchresultLayout">
       <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item> 
    <item name="android:visibility">gone</item>
    </style>
    <style name="SearchresultListview" parent="@android:style/Widget.ListView">
        <item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:listSelector">@drawable/item_background_holo_light</item>
		<item name="android:divider">@drawable/divider_channellistinside</item>
    	<item name="android:dividerHeight">1px</item>
    	<item name="android:cacheColorHint">#0000</item>
    </style>
    <style name="SearchresultListheader" parent="@android:style/Widget.TextView">
         <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/txt_searchresult_header</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/sec_color</item>
    </style>
</resources>