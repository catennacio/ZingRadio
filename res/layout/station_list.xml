<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_dark_background"
    android:orientation="vertical" >

    <!-- Header -->

    <RelativeLayout style="@style/ChannellistinsideHeader" >

        <ImageButton
            android:id="@+id/button_back"
            style="@style/ButtonBack"
            android:layout_alignParentLeft="true"
            android:src="@drawable/img_btn_back" />

        <TextView
            android:id="@+id/station_list_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/button_back"
            android:background="@null"
            android:drawablePadding="6dip"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@color/txt_channellist_header"
            android:textSize="16sp" />
    </RelativeLayout>

    <!-- ListView -->

    <ListView
        android:id="@+id/station_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/divider_channellistinside"
        android:dividerHeight="1px"
        android:listSelector="@drawable/list_channel_name"
        android:cacheColorHint="#0000"
        >
    </ListView>

</LinearLayout>